<%- include("../partials/header") %>




    <div class="col-md-6 mx-auto">
        <div class="mt-5" style="border: 1px solid rgb(151, 151, 151); border-radius: 20px; padding: 20px;">
            <h2>Signup</h2>
            <form action="/register" method="POST">
                <div class="mb-3">
                    <label class="label-form" for="">Username: </label>
                    <input class="form-control" type="text" name="username" required>
                </div>
                <div class="mb-3">
                    <label class="label-form" for="">Email: </label>
                    <input class="form-control" type="email" name="email" required>
                </div>
                <div class="mb-3">
                    <p>Want to register as?</p>
                    <div class="mb-1">
                        <label class="label-form" for="buyer">Buyer: </label>
                        <input class="form-check-input" type="radio" name="role" id="buyer" value="buyer" required>
                    </div>
                    <div class="mb-3">
                        <label class="label-form" for="seller">Seller: </label>
                        <input class="form-check-input" type="radio" name="role" id="seller" value="seller" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="label-form" for="">Password: </label>
                    <input class="form-control" type="password" name="password" required>
                </div>
                <p>Already have an account? <a href="/login">Login</a></p>
                <button class="btn btn-sm btn-outline-success">Signup</button>
            </form>
    </div>
    </div>



 <%- include("../partials/footer") %>